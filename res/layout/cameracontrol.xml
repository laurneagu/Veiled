<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:weightSum="1" android:id="@+id/flayout">

    <Button
                android:id="@+id/postmessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" * Post message "
                android:layout_gravity="right|bottom"
                android:layout_margin="10px"
                />
    <EditText
            android:id="@+id/message"
            android:background="@drawable/mygradient"
            android:layout_width="267dp"
            android:layout_height="190dp"
            android:text="My text here.."
            android:gravity="center" android:layout_gravity="center_horizontal|top" android:textColor="#ffffffff"/>

</FrameLayout>